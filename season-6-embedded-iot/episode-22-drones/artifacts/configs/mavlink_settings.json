{
  "connection": {
    "type": "serial",
    "port": "/dev/ttyUSB0",
    "baudrate": 57600,
    "timeout": 5
  },
  "heartbeat": {
    "interval": 1.0,
    "system_id": 255,
    "component_id": 190
  },
  "encryption": {
    "enabled": true,
    "algorithm": "AES-256-GCM",
    "key_file": "~/.drone/mavlink.key"
  },
  "failsafe": {
    "heartbeat_timeout": 3.0,
    "action": "RTL"
  },
  "telemetry": {
    "stream_rate": 4,
    "log_enabled": true,
    "log_path": "/var/log/drone/"
  }
}
