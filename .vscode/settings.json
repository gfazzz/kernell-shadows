{
  // KERNEL SHADOWS - Настройки редактора
  // Работает в VSCode и Cursor

  // === Bash/Shell ===
  "shellcheck.enable": true,
  "shellcheck.executablePath": "/usr/bin/shellcheck",
  "shellcheck.run": "onType",
  "shellcheck.exclude": [],

  // Форматирование Bash
  "shellformat.effectLanguages": [
    "shellscript",
    "dockerfile",
    "dotenv"
  ],
  "shellformat.flag": "-i 2 -ci",

  // === Markdown ===
  "markdown.preview.fontSize": 14,
  "markdown.preview.lineHeight": 1.6,
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },

  // Markdown lint
  "markdownlint.config": {
    "MD013": false,  // Line length - отключаем (длинные строки кода в примерах)
    "MD033": false,  // Inline HTML - разрешаем (для badges, div align)
    "MD041": false   // First line heading - разрешаем (для ASCII art LILITH)
  },

  // === Редактор ===
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.formatOnSave": false,  // Не форматировать автоматически (bash скрипты могут сломаться)
  "editor.rulers": [80, 120],
  "editor.renderWhitespace": "boundary",
  "editor.minimap.enabled": true,

  // === Файлы ===
  "files.encoding": "utf8",
  "files.eol": "\n",  // Unix line endings
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // Исключения из поиска и автодополнения
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.git": true
  },

  // === Терминал ===
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "monospace",
  "terminal.integrated.shell.linux": "/bin/bash",
  "terminal.integrated.scrollback": 10000,

  // === Git ===
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  // === Подсветка TODO ===
  "todohighlight.keywords": [
    {
      "text": "TODO:",
      "color": "#fff",
      "backgroundColor": "#ffab00",
      "overviewRulerColor": "rgba(255,171,0,0.8)"
    },
    {
      "text": "FIXME:",
      "color": "#fff",
      "backgroundColor": "#f44336",
      "overviewRulerColor": "rgba(244,67,54,0.8)"
    },
    {
      "text": "NOTE:",
      "color": "#fff",
      "backgroundColor": "#2196F3",
      "overviewRulerColor": "rgba(33,150,243,0.8)"
    },
    {
      "text": "LILITH:",
      "color": "#000",
      "backgroundColor": "#9C27B0",
      "overviewRulerColor": "rgba(156,39,176,0.8)"
    }
  ],

  // === Специфично для курса ===
  "files.associations": {
    "*.sh": "shellscript",
    "starter.sh": "shellscript",
    "test.sh": "shellscript",
    ".cursorrules": "plaintext"
  },

  // Не открывать автоматически solution/ (чтобы не спойлерить)
  "files.watcherExclude": {
    "**/solution/**": true
  }
}

